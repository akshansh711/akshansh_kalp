#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int strLen(char *string) {
    int i=0;
    int len = 0;
    while (string[i] != '\0')
    {
        len++;
        i++;
    }
    return len;
}

int main()
{
    char *input_string = (char *)malloc(100 * sizeof(char));
    scanf("%s", input_string);

    int size = strLen(input_string);

    int maxLen = 0, len = 0;

    if (size == 0)
    {
        return size;
    }
    else if (input_string[0] == ' ')
    {
        return 1;
    }
    else
    {
        for (int i = 0; i < size; i++)
        {
            len = 0;
            int freq[26] = {0};
            for (int j = i; j < size; j++)
            {
                if (freq[input_string[j] - 'a'] > 0)
                {
                    if (maxLen < len)
                    {
                        maxLen = len;
                    }
                    break;
                }
                else
                {
                    freq[input_string[j] - 'a']++;
                    len++;
                    if (maxLen < len)
                    {
                        maxLen = len;
                    }
                }
            }
        }
    }
    printf("%d", maxLen);
}
